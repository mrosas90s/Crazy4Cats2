<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <% @posts.each do |post| %>
        <div class="card mb-3">
          <div class="card-body">
            <p class="card-text"><%= post.content %></p>
            <p class="card-text">Hecho por: <%= post.user.email %></p>
            <p class="card-text"><%= post.likes.count %> Likes</p>
            <%= link_to 'Like', likes_path(post_id: post.id), method: :post, remote: true, class: 'btn btn-primary', data: { turbolinks: false } %>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
